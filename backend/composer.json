{
    "name": "payroll-management-system/backend",
    "description": "Enterprise-grade Payroll Management System Backend",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "http://repo.packagist.org"
        }
    ],
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "firebase/php-jwt": "^6.10",
        "monolog/monolog": "^3.5",
        "respect/validation": "^2.3",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "disable-tls": true,
        "secure-http": false
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "analyze": "phpstan analyse src",
        "cs": "phpcs src",
        "cs:fix": "phpcbf src"
    }
}
